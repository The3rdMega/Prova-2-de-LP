Prog. Program  ::= Stm ;

SExp.    Stm ::= Exp ";" ;
SBlock.  Stm ::= "{" [Stm] "}" ;
SWhile.  Stm ::= "while" "(" Exp ")" Stm ;

terminator Stm "" ;

EAss. Exp   ::= Ident "=" Exp ;
EAdd. Exp1  ::= Exp1  "+" Exp2 ;
ESub. Exp1  ::= Exp1  "-" Exp2 ;
EMul. Exp2  ::= Exp2 "*" Exp3 ;
EDiv. Exp2  ::= Exp2 "/" Exp3 ;
EInt. Exp3  ::= Integer ;
EVar. Exp3  ::= Ident ;
  
coercions Exp 3 ;

